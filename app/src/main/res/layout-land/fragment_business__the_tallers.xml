<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idBusinessMainFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_horizontal"
    android:orientation="vertical"
    tools:context=".business_MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Talleres -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="325dp"
            android:layout_height="470dp"
            android:layout_marginTop="50dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="280dp"
                android:layout_height="150dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="20dp"
                app:shapeAppearanceOverlay="@style/roundedImageView"
                app:srcCompat="@drawable/business_taller_img1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="180dp"
                android:text="@string/taller_martinet"
                android:textAllCaps="true"
                android:textColor="@color/darkgrey"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="215dp"
                android:text="@string/carrer_del_lliri_21_08402_ngranollers_barcelona"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center|end"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/acceso" />

            <Button
                android:id="@+id/btn_telBusinessTaller_1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="130dp"
                android:text="@string/btn_textTrucarTel"
                android:textAllCaps="true"
                android:textColor="@color/darkMarfil"
                app:strokeColor="@color/darkMarfil"
                android:textSize="15sp"
                android:textStyle="bold"
                app:cornerRadius="6dp"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/btn_BusinessMap_1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="80dp"
                android:text="@string/mostrar_al_mapa"
                android:textAllCaps="true"
                android:textColor="@color/darkMarfil"
                app:strokeColor="@color/darkMarfil"
                android:textSize="15sp"
                android:textStyle="bold"
                app:cornerRadius="6dp"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/btn_BusinessWeb_1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="30dp"
                android:enabled="false"
                android:text="@string/visitar_la_web"
                android:textAllCaps="true"
                android:textColor="@color/grey"
                app:strokeColor="@color/grey"
                android:textSize="15sp"
                android:textStyle="bold"
                app:cornerRadius="6dp"
                app:strokeWidth="3dp" />

        </com.google.android.material.card.MaterialCardView>

