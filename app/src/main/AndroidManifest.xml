<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projectegrancentre">
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-feature android:name="android.hardware.telephony" android:required="false" />
    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_gran_centre"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_gran_centre_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjecteGranCentre">
        <activity
            android:name=".RestDetails"
            android:exported="true" />
        <activity
            android:name=".Transports"
            android:exported="true" />
        <activity
            android:name=".Restaurants"
            android:exported="true" />
        <activity
            android:name=".parking"
            android:exported="true" />
        <activity
            android:name=".hotels"
            android:exported="true" />
        <activity
            android:name=".movies"
            android:exported="true" />
        <activity
            android:name=".business"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>